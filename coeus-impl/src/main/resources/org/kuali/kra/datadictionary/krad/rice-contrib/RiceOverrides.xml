<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="PeopleFlow-Member" parent="Uif-FieldGroupBase" p:label="Member"
          p:refreshWhenChangedPropertyNames="#lp.memberTypeCode"
          p:readOnly="@{#view.readOnly}">
        <property name="group">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="items">
                    <list>
                        <bean parent="Uif-InputField" p:propertyName="memberName" p:required="true"
                              p:progressiveRenderViaAJAX="true"
                              p:progressiveRender="@{#line.memberTypeCode eq 'P'}">
                            <property name="control">
                                <bean parent="Uif-KimPersonControl" p:principalIdPropertyName="memberId"
                                      p:personNamePropertyName="person.name" p:watermarkText="Name"/>
                            </property>
                        </bean>
                        <bean parent="Uif-InputField" p:propertyName="memberName" p:required="true"
                              p:progressiveRenderViaAJAX="true"
                              p:progressiveRender="@{#line.memberTypeCode eq 'R'}">
                            <property name="control">
                                <bean parent="Uif-TextControl" p:size="40"/>
                            </property>
                            <property name="quickfinder">
                                <bean parent="Uif-QuickFinder"
                                      p:dataObjectClassName="org.kuali.rice.kim.impl.role.RoleBo"
                                      p:fieldConversions="id:memberId" p:render="@{!#view.readOnly}"/>
                            </property>
                        </bean>
                        <bean parent="Uif-InputField" p:propertyName="memberName" p:required="true"
                              p:progressiveRenderViaAJAX="true"
                              p:progressiveRender="@{#line.memberTypeCode eq 'G'}">
                            <property name="control">
                                <bean parent="Uif-TextControl" p:size="40"/>
                            </property>
                            <property name="quickfinder">
                                <bean parent="Uif-QuickFinder"
                                      p:dataObjectClassName="org.kuali.rice.kim.impl.group.GroupBo"
                                      p:fieldConversions="id:memberId" p:render="@{!#view.readOnly}"/>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
</beans>