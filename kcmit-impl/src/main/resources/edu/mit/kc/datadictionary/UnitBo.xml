<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="UnitBo" parent="UnitBo-parentBean" />
	<bean id="UnitBo-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.kra.bo.UnitBo" />
		<property name="objectLabel" value="Unit" />
		<property name="lookupDefinition">
			<ref bean="UnitBo-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="unitNumber" />
		<property name="attributes">
			<list>
				<ref bean="UnitBo-unitNumber" />
				<ref bean="UnitBo-parentUnitNumber" />
				<ref bean="UnitBo-organizationId" />
				<ref bean="UnitBo-unitName" />
				<ref bean="UnitBo-active" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	<bean id="UnitBo-unitNumber" parent="UnitBo-unitNumber-parentBean" />
	<bean id="UnitBo-unitNumber-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="name" value="unitNumber" />
		<property name="forceUppercase" value="true" />
		<property name="label" value="Unit Number" />
		<property name="shortLabel" value="Unit Number" />
		<property name="maxLength" value="8" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" />
		</property>
		<property name="validCharactersConstraint">
			<bean parent="AnyCharacterPatternConstraint" />
		</property>
		<property name="required" value="true" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="8" />
		</property>
		<property name="controlField">
			<bean p:size="8" parent="Uif-TextControl" />
		</property>
		<property name="summary" value="Unit Number" />
		<property name="description" value="Unit Number" />
	</bean>

	<bean id="UnitBo-parentUnitNumber" parent="UnitBo-parentUnitNumber-parentBean" />
	<bean id="UnitBo-parentUnitNumber-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="name" value="parentUnitNumber" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Parent Unit Number" />
		<property name="shortLabel" value="Parent Unit Number" />
		<property name="maxLength" value="8" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" />
		</property>
		<property name="validCharactersConstraint">
			<bean parent="AnyCharacterPatternConstraint" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="8" />
		</property>
		<property name="controlField">
			<bean p:size="8" parent="Uif-TextControl" />
		</property>
		<property name="summary" value="Parent Unit Number" />
		<property name="description" value="Parent Unit Number" />
	</bean>

	<bean id="UnitBo-organizationId" parent="UnitBo-organizationId-parentBean" />
	<bean id="UnitBo-organizationId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="name" value="organizationId" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Organization Id" />
		<property name="shortLabel" value="Organization Id" />
		<property name="maxLength" value="8" />
		<property name="validationPattern">
			<bean parent="AlphaNumericValidationPattern" />
		</property>
		<property name="validCharactersConstraint">
			<bean parent="AlphaNumericPatternConstraint" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="8" />
		</property>
		<property name="controlField">
			<bean p:size="8" parent="Uif-TextControl" />
		</property>

		<property name="summary" value="Organization Id" />
		<property name="description" value="Organization Id" />
	</bean>

	<bean id="UnitBo-unitName" parent="UnitBo-unitName-parentBean" />
	<bean id="UnitBo-unitName-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="name" value="unitName" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Unit Name" />
		<property name="shortLabel" value="Unit Name" />
		<property name="maxLength" value="60" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true" />
		</property>
		<property name="validCharactersConstraint">
			<bean parent="AnyCharacterPatternConstraint">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="60" />
		</property>
		<property name="controlField">
			<bean p:size="60" parent="Uif-TextControl" />
		</property>
		<property name="summary" value="Unit Name" />
		<property name="description" value="Unit Name" />
	</bean>
	
	<bean id="UnitBo-active" parent="UnitBo-active-parentBean"/>
	<bean id="UnitBo-active-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean">
        <property name="name" value="active"/>
        <property name="label" value="Active"/>
        <property name="shortLabel" value="Active"/>
        <property name="summary" value="Active"/>
        <property name="description" value="Active"/>
  	</bean>
	<!-- Business Object Lookup Definition -->
	<bean id="UnitBo-lookupDefinition" parent="UnitBo-lookupDefinition-parentBean" />
	<bean id="UnitBo-LookupView" parent="UnitBo-LookupView-parentBean" />
	<bean id="UnitBo-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="title" value="Unit Lookup" />
		<property name="lookupableID" value="unitLookupable" />
		<property name="defaultSort">
			<bean parent="SortDefinition" />
		</property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="unitNumber" />
				<bean parent="FieldDefinition" p:attributeName="parentUnitNumber" />
				<bean parent="FieldDefinition" p:attributeName="organizationId" />
				<bean parent="FieldDefinition" p:attributeName="unitName" />
				<bean parent="FieldDefinition" p:attributeName="active"/> 
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="unitNumber"
					p:forceInquiry="true" />
				<bean parent="FieldDefinition" p:attributeName="parentUnitNumber" />
				<bean parent="FieldDefinition" p:attributeName="organizationId" />
				<bean parent="FieldDefinition" p:attributeName="unitName" />
				 <bean parent="FieldDefinition" p:attributeName="active"/> 
			</list>
		</property>
	</bean>

	<bean id="UnitBo-LookupView-parentBean" abstract="true" parent="Uif-LookupView">
		<property name="dataObjectClassName" value="org.kuali.kra.bo.UnitBo" />
		<property name="headerText" value="Unit Lookup" />
		<property name="criteriaFields">
			<list>
				<bean p:propertyName="unitNumber" parent="Uif-LookupCriteriaInputField" />
				<bean p:propertyName="parentUnitNumber" parent="Uif-LookupCriteriaInputField" />
				<bean p:propertyName="organizationId" parent="Uif-LookupCriteriaInputField" />
				<bean p:propertyName="unitName" parent="Uif-LookupCriteriaInputField" />
			 </list>
		</property>
		<property name="resultFields">
			<list>
				<bean p:propertyName="unitNumber" parent="Uif-DataField" />
				<bean p:propertyName="parentUnitNumber" parent="Uif-DataField" />
				<bean p:propertyName="organizationId" parent="Uif-DataField" />
				<bean p:propertyName="unitName" parent="Uif-DataField" />
				<bean p:propertyName="active" parent="Uif-DataField"/> 
			</list>
		</property>
	</bean>

</beans>
